<?xml version="1.0"?>
<slideshow xsi:noNamespaceSchemaLocation="g1_schema_v1.4.4.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <documentinfo>
    <heading>SlideRenderer Test</heading>
    <author>Philip Day</author>
    <version>0.1</version>
    <comment>Test the functionality of SlideRenderer. Complies with schema.xsd</comment>
  </documentinfo>
  <defaults>
    <textdefault  fontname="Arial" fontsize="12" fontcolor="#000000" backgroundcolor="#ffffff" backgroundalpha="0" />
    <slidedefault backgroundcolor="#ffffff" />
  </defaults>

  <slide id="1" backgroundcolor="#ffffff" duration="0" nextslideid="2">

  <text fontname="Arial" fontsize="32" fontcolor="#000000" alpha="1.0" x="10" y="10" starttime="0" endtime="0">Text Test 1</text>
  <text fontname="Arial" fontsize="24" fontcolor="#000000" alpha="1.0" x="10" y="50" starttime="0" endtime="0">Start Time 0 - End time 0</text>
  <text fontname="Arial" fontsize="24" fontcolor="#000000" alpha="1.0" x="10" y="90" starttime="500" endtime="0">Start Time 500 - End time 0</text>
  <text fontname="Arial" fontsize="24" fontcolor="#000000" alpha="1.0" x="10" y="130" starttime="1000" endtime="3000">Start Time 1000 End time 3000</text>

  </slide>

  <slide id="2" backgroundcolor="#ffffff" duration="0" nextslideid="3">
  <text fontname="Arial" fontsize="32" fontcolor="#000000" alpha="1.0" x="10" y="10" starttime="0" endtime="0">Image Test 1</text>

  <text fontname="Arial" fontsize="24" fontcolor="#000000" alpha="1.0" x="10" y="70" starttime="0" endtime="0">Start Time 0 - End time 0</text>
  <image path="shock.png" x="0" y="100" width="150" height="70" starttime="0" endtime="0"/>

  <text fontname="Arial" fontsize="24" fontcolor="#000000" alpha="1.0" x="10" y="170" starttime="0" endtime="0">Start Time 500 - End time 0</text>
  <image path="shock.png" x="0" y="200" width="150" height="70" starttime="500" endtime="0"/>

  <text fontname="Arial" fontsize="24" fontcolor="#000000" alpha="1.0" x="10" y="270" starttime="0" endtime="0">Start Time 1000 - End time 3000</text>
  <image path="shock.png" x="0" y="300" width="150" height="70" starttime="1000" endtime="3000"/>

  </slide>

  <slide id="3" backgroundcolor="#ffffff" nextslideid="4">
  <text fontname="Arial" fontsize="32" fontcolor="#000000" alpha="1.0" x="0" y="0" starttime="0" endtime="0">Video Test 1</text>

  <text fontname="Arial" fontsize="24" fontcolor="#000000" alpha="1.0" x="350" y="20" starttime="0" endtime="0">Start Time 0 - End time 0</text>
  <video path="legend.avi" x="350" y="50" width="200" height="200" starttime="0" endtime="0" />

  <text fontname="Arial" fontsize="24" fontcolor="#000000" alpha="1.0" x="350" y="300" starttime="0" endtime="0">Start Time 500 - End time 4000</text>
  <video path="legend.avi" x="350" y="350" width="200" height="200" starttime="500" endtime="4000" />

  <text fontname="Arial" fontsize="24" fontcolor="#000000" alpha="1.0" x="10" y="300" starttime="0" endtime="0">Start Time 2000 - End time 0</text>
  <video path="legend.avi" x="50" y="350" width="200" height="200" starttime="2000" endtime="0" />


  </slide>


  <slide id="4" backgroundcolor="#ffffff" duration="10000" nextslideid="5">
   <text fontname="Arial" fontsize="32" fontcolor="#000000" alpha="1.0" x="0" y="0" starttime="0" endtime="0">Audio Test 1</text>

   <text fontname="Arial" fontsize="24" fontcolor="#000000" alpha="1.0" x="10" y="70" starttime="0" endtime="0">Start Time 0 - End time 0</text>
   <audio path="blues.wma" x="10" y="100" starttime="0" endtime="0"/>

   <text fontname="Arial" fontsize="24" fontcolor="#000000" alpha="1.0" x="10" y="170" starttime="0" endtime="0">Start Time 500 - End time 4000</text>
   <audio path="blues.wma" x="10" y="200" starttime="500" endtime="4000"/>

   <text fontname="Arial" fontsize="24" fontcolor="#000000" alpha="1.0" x="10" y="270" starttime="0" endtime="0">Start Time 2000 - End time 0</text>
   <audio path="blues.wma" x="10" y="300" starttime="2000" endtime="0"/>
  </slide>


 <slide id="5" backgroundcolor="#ffffff" duration="10000" nextslideid="6">
   <text fontname="Arial" fontsize="32" fontcolor="#000000" alpha="1.0" x="0" y="0" starttime="0" endtime="0">Midi Test 1</text>

   <text fontname="Arial" fontsize="24" fontcolor="#000000" alpha="1.0" x="10" y="70" starttime="0" endtime="0">Start Time 1000 - End time 2000</text>
   <midi path="sample.mid" starttime="1000" endtime="2000" loop="true" />

   <text fontname="Arial" fontsize="24" fontcolor="#000000" alpha="1.0" x="10" y="170" starttime="0" endtime="0">Start Time 3000 - End time 0</text>
   <midi path="sample.mid" starttime="3000" endtime="0" loop="true" />


  </slide>


  <slide id="6" backgroundcolor="#ffffff" duration="50000" nextslideid="7">
    <text fontname="Arial" fontsize="32" fontcolor="#000000" alpha="1.0" x="0" y="0" starttime="0" endtime="0">Scroll Pane Test 1</text>

    <text fontname="Arial" fontsize="24" fontcolor="#000000" alpha="1.0" x="10" y="70" >Start Time 0 - End time 0</text>
    <scrollpane x="0" y="100" width="200" height="100" starttime="0" endtime="0" backgroundcolor="#f0f0f0" backgroundalpha="0.5">
        <text fontname="Arial" fontsize="12" fontcolor="#000000" alpha="1.0" x="0" y="100">Feedback Text</text>
        <image path="shock.png" x="50" y="100" width="150" height="200" starttime="0" endtime="0"/>
    </scrollpane>



  </slide>

<slide id="7" backgroundcolor="#ffffff" duration="50000" nextslideid="8">
    <text fontname="Arial" fontsize="32" fontcolor="#000000" alpha="1.0" x="0" y="0" starttime="0" endtime="0">Slide Progression Test </text>




  </slide>

 <slide id="8" backgroundcolor="#ffffff" duration="50000" nextslideid="9">
 <text fontname="Arial" fontsize="24" fontcolor="#000000" alpha="1.0" x="10" y="130" starttime="1000" endtime="3000">Start Time 1000 End time 3000</text>


</slide>

 <slide id="9" backgroundcolor="#ffffff" duration="50000" nextslideid="10">
    <text fontname="Arial" fontsize="32" fontcolor="#000000" alpha="1.0" x="0" y="0" starttime="0" endtime="0">Slide Progression Test </text>


</slide>

 <slide id="10" backgroundcolor="#ffffff" duration="50000" nextslideid="11">
    <text fontname="Arial" fontsize="32" fontcolor="#000000" alpha="1.0" x="0" y="0" starttime="0" endtime="2000">Slide Progression Test </text>
    <image path="shock.png" x="0" y="300" width="150" height="70" starttime="2000" endtime="4000"/>
    <audio path="blues.wma" x="10" y="200" starttime="4000" endtime="6000"/>
    <midi path="sample.mid" starttime="6000" endtime="8000" loop="true" />


</slide>

  <quizslide id="11" backgroundcolor="#ffffff" duration="10000" nextslideid="1">
    <text fontname="Arial" fontsize="24" fontcolor="#000000" alpha="1.0" x="60" y="70" starttime="100" endtime="2500">Test7</text>
    <text fontname="Arial" fontsize="18" fontcolor="#000000" alpha="1.0" x="160" y="150" starttime="0" endtime="10">"Why do they inflict ecad on us aswell as sweng during the summer term?"</text>
    <text fontname="verdana" fontsize="16" fontcolor="#000000" alpha="1" x="160" y="180" starttime="10000" endtime="0">Answer A</text>
    <text fontname="verdana" fontsize="16" fontcolor="#000000" alpha="1" x="430" y="180" starttime="10000" endtime="0">Answer B</text>
    <text fontname="verdana" fontsize="16" fontcolor="#000000" alpha="1" x="160" y="210" starttime="10000" endtime="0">Answer C</text>
    <text fontname="verdana" fontsize="16" fontcolor="#000000" alpha="1" x="430" y="210" starttime="10000" endtime="0">Answer D</text>


    <answerarea id="1" x="160" y="180" width="100" height="25" />
    <answerarea id="2" x="430" y="180" width="100" height="25" />
    <answerarea id="3" x="160" y="210" width="100" height="25" />
    <answerarea id="4" x="430" y="210" width="100" height="25" />
    <correctanswer id="1"/>
    <scorelocation fontname="Arial" fontsize="12" fontcolor="#000000" alpha="1.0" x="600" y="400" backgroundcolor="#f0f0f0" backgroundalpha="0.5"/>
    <correctlocation fontname="Arial" fontsize="12" fontcolor="#000000" alpha="1.0" x="100" y="450" backgroundcolor="#f0f0f0" backgroundalpha="0.5" />
    <feedback>

        <scrollpane x="0" y="400" width="590" height="200" backgroundcolor="#f0f0f0" backgroundalpha="0.5">
            <text fontname="Arial" fontsize="12" fontcolor="#000000" alpha="1.0" x="100" y="100">Feedback Text</text>
        </scrollpane>

        <text x="500" y="500" onclick="2"> Next Slide!</text>
      </feedback>


  </quizslide>

    <section_slide id="1" name="Text Test 1"/>
    <section_slide id="2" name="Images Test 1"/>
    <section_slide id="3" name="Video Test 1"/>
    <section_slide id="4" name="Audio Test 1"/>
    <section_slide id="5" name="Midi Test 1"/>
    <section_slide id="6" name="Scroll Pane Test 1"/>
  </section>
