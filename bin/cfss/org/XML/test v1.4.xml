<?xml version="1.0"?>
<slideshow xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation='g1_schema_v1.4.4.xsd'>
  <documentinfo>
    <author>Mark Wrightson</author>
    <version>1.0</version>
    <comment>A test xml file. Complies with schema.xsd</comment>
  </documentinfo>
  <defaults>
    <textdefault  fontname="Arial" fontsize="12" fontcolor="#000000" />
    <slidedefault backgroundcolor="#ffffff" />
  </defaults>
  <slide id="1" backgroundcolor="#ffffff" duration="10000" nextslideid="2">
    <text fontname="Arial" fontsize="12" fontcolor="#000000" alpha="1.0" x="100" y="100" starttime="0" endtime="10">Hello World</text>
    <text fontname="verdana" fontsize="10.5" fontcolor="#aaff12" alpha="0.23" x="100" y="90" starttime="10000" endtime="15000"></text>
    <audio path="audio.mp2" x="100" y="100" starttime="0" endtime="10000"/>
  </slide>
  <slide id="2" backgroundcolor="#ffffff" duration="10000" nextslideid="3">
    <text fontname="Arial" fontsize="12" fontcolor="#000000" alpha="1.0" x="100" y="100" starttime="0" endtime="10"></text>
  </slide>
  <slide id="3" backgroundcolor="#ffffff" nextslideid="4">
    <audio path="audio.mp2" x="100" y="100" starttime="0" endtime="10000"/>
  </slide>
  <slide id="4" backgroundcolor="#ffffff" duration="10000" nextslideid="5">
    <midi path="/audio/file_name.mid" starttime="10000" loop="true" />
    <shape x="50" y="70" fill="false" alpha="1" starttime="40000" endtime="80000" >
      <shapepath x="100" y="100"/>
      <shapepath x="50" y="150"/>
    </shape>
    <circle x="20" y="30" color="#B40000" starttime="0" endtime="10000" thickness="5" radius = "10" fill="true" alpha="0.5" onclick="5"/>
  </slide>
  <slide id="5" backgroundcolor="#ffffff" duration="50000" nextslideid="1">
    <image path="images/Image1.jpg" x="20" y="20" width="120" height="360" starttime="1000" endtime="50000"/>
    <video path="video.mpg" x="100" y="100" width="200" height="100" endtime="0"/>
  </slide>
</slideshow>