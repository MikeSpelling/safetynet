<?xml version="1.0"?>
<slideshow xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation='g1_schema_v1.4.4.xsd'>
  <documentinfo>
    <author>Michael Spelling</author>
    <version>1.0</version>
    <comment>A Text testing xml file. Complies with schema.xsd</comment>
  </documentinfo>
  <defaults>
    <textdefault  fontname="Arial" fontsize="12" fontcolor="#000000" />
    <slidedefault backgroundcolor="#000000" />
  </defaults>

  <slide id="1" backgroundcolor="#ffffff" duration="50000" nextslideid="2">
    <text fontname="Arial" fontsize="20" fontcolor="#ffffff" alpha="1.0" x="0" y="50" starttime="0" endtime="0" onclick="3">Goto slide 3</text>
    <text fontname="Arial" fontsize="20" fontcolor="#ffffff" alpha="1.0" x="300" y="50" starttime="0" endtime="0" onclick="0" onclickurl="www.google.co.uk">Goto google</text>
    <circle x="0" y="400" fill="true" alpha="0.5" radius="100" onclick="2"/>
    <circle x="300" y="400" fill="true" alpha="0.5" radius="100" onclick="0" onclickurl="www.voltnet.co.uk/sweng"/>
  </slide>

  <slide id="2" backgroundcolor="#ffffff" duration="0" nextslideid="3">
       <text fontname="Arial" fontsize="20" fontcolor="#ffffff" alpha="1.0" x="0" y="50" starttime="0" endtime="0">Slide 2</text>
  </slide>

  <slide id="3" backgroundcolor="#ffffff" nextslideid="4">
    <text fontname="Arial" fontsize="20" fontcolor="#ffffff" alpha="1.0" x="0" y="50" starttime="0" endtime="0">Slide 3</text>
  </slide>

  <slide id="4" backgroundcolor="#ffffff" duration="10000" nextslideid="4">
        <text fontname="Arial" fontsize="20" fontcolor="#ffffff" alpha="1.0" x="0" y="50" starttime="0" endtime="0">Slide 4</text>
  </slide>
  </slideshow>